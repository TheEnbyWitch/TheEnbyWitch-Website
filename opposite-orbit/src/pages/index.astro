---
import MainLayout from '../layouts/MainLayout.astro';
import { Image, Picture } from '@astrojs/image/components';

const posts = await Astro.glob("./blog/*.{md,mdx}")
---

<MainLayout>
	{
		posts.map(
				({frontmatter, Content}) => (
					<h2 class="text-2xl">{frontmatter.title}</h2>
					<div class="py-4">
						<Content />
					</div>
				)
			)
	}
</MainLayout>