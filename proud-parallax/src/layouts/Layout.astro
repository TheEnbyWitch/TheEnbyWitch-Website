---
export interface Props {
	title: string;
}

const description = 'First Person Animator & Unreal Engine Generalist'
const baseUrl = 'https://vivi.the.enbywit.ch'
const defaultCover = '/cover.png'
var cover = defaultCover
const baseCoverUrl = `${baseUrl}${defaultCover}`

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content="vivi, website" />
		<meta name="twitter:description" content={description} />
		<!--<meta name="twitter:image:alt" content={title} />
		<meta name="twitter:image" content={`${baseUrl}${cover}`} />
		<meta name="twitter:title" content={title} />-->
		<meta name="viewport" content="initial-scale=1.0, width=device-width" />
		<meta property="og:description" content={description} />
		<!--<meta property="og:image:height" content="630" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image" content={`${baseUrl}${cover}`} />-->
		<meta property="og:title" content={title} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={`${baseUrl}`} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 237, 58, 127;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #ef349a 30%, #222 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #111;
		color: #fefefe;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
