---
export interface Props {
	title: string;
	body: string;
	href: string;
	bgImage: string;
}

const { href, title, body, bgImage } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
		{body}
		</p>
		<slot/>
	</a>	
</li>
<style define:vars={{bgImage: bgImage}}>
	.link-card > a::before {
		content: "";
		position: absolute;
		left: 0;
		right: 0;
		top: 0;
		bottom:0;
		z-index: -1;
		background-image: var(--bgImage);
  		display: block;
		margin:0;
		border-radius: 0.35rem;
		filter: brightness(60%) blur(2px);
		transition: filter 0.2s linear;
		background-size: cover;
    	background-position: 50% 50%;
	}
	.link-card:is(:hover) > a:before {
		filter: brightness(30%) blur(30px);
	}
</style>
<style is:global>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.15rem;
		background-color: #000000;
		background-image: var(--accent-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 99%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #fff;
		background-color: #000;
		opacity: 0.8;
  		position: relative;
	}
	.link-card h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-shadow: 0px 0px 4px black, 0px 0px 4px black, 0px 0px 8px black;
	}
	.link-card p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #ccc;
		text-shadow: 0px 0px 2px black, 0px 0px 2px black, 0px 0px 5px black;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>
